<div class="bg-white rounded-xl p-4 flex flex-col justify-between h-36">
    <div class="flex gap-2 mb-4">
      <%= link_to user_path(current_user), class: "w-12 my-auto" do %>
        <%= image_tag current_user.gravatar_url, class: "avatar-round" %>
      <% end %>
      <%= form_with model: @post, class: "w-[100%]" do |prompt| %>
        <%= prompt.text_field :body, placeholder: "What's on your mind, #{current_user.name}?", class: "input-field" %>
        <% prompt.hidden_field :user_id, value: current_user.id %>
        <% prompt.submit %>
      <% end %>
    </div>
    <hr class="mb-4">
    <div class="flex justify-around">
      <div class="button-prompt">
        <%= image_tag 'video-camera-with-play-button', class: "w-8" %>
        <p>Live video</p>
      </div>
      <div class="button-prompt">
        <%= image_tag 'images', class: "w-8" %>
        <p>Photo/video</p>
      </div>
      <div class="button-prompt">
        <%= image_tag 'emoticon', class: "w-8" %>
        <p>Feeling/activity</p>
      </div>
    </div>
  </div>