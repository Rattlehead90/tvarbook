<div class="bg-gray-100 h-screen flex items-center justify-center gap-36">
  <div class="mt-[-8rem]">
    <h2 class="font-exo font-bold text-6xl text-blue-500">facebook</h2>
    <p class="text-2xl font-semibold w-[450px]">Connect with friends and the world around you on Facebook</p>
  </div>
  <div class="bg-white p-5 rounded-lg shadow-lg w-[400px]">
    <%= form_for(resource, as: resource_name, :html => {:class => 'flex flex-col gap-4'}, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-login", placeholder: 'Email or phone number' %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input-login", placeholder: 'Password' %>
      <%= f.submit "Log in", class: "button-login font-semibold" %>
    <% end %>
    <div class="flex flex-col text-center gap-4">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-800 visited:text-purple-600" %>
      <hr>
      <%= link_to "Create new account", new_registration_path(resource_name), class: "signup-button" %>
    </div>
  </div>
</div>
